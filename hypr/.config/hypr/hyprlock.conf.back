# ============================================================================
# Hyprlock Configuration with Music Player Widget
# ============================================================================

# ----------------------------------------------------------------------------
# Background
# ----------------------------------------------------------------------------
background {
    monitor =
    path = $HOME/Pictures/wallpapers/wp2379096-ori-and-the-blind-forest-wallpapers.jpg
    blur_passes = 3
    contrast = 0.8916
    brightness = 0.8172
    vibrancy = 0.1696
    vibrancy_darkness = 0.0
}

# ----------------------------------------------------------------------------
# General Settings
# ----------------------------------------------------------------------------
general {
    ignore_empty_input = true
    hide_cursor = true
}

# ----------------------------------------------------------------------------
# Animations
# ----------------------------------------------------------------------------
animations {
    animation = fade,    1, 6, default
    animation = fadeIn,  1, 6, default
    animation = fadeOut, 1, 6, default
}

# ----------------------------------------------------------------------------
# Password Input Field
# ----------------------------------------------------------------------------
input-field {
    monitor =
    size = 250, 55
    outline_thickness = 2
    dots_size = 0.2      # Scale of input-field height (0.2 - 0.8)
    dots_spacing = 0.2   # Scale of dots' absolute size (0.0 - 1.0)
    dots_center = true
    outer_color = rgba(0, 0, 0, 0)
    inner_color = rgba(100, 114, 125, 0.4)
    font_color = rgb(200, 200, 200)
    fade_on_empty = false
    font_family = SF Pro Display Bold Italic
    placeholder_text = <span foreground="##ffffff99">Enter Pass</span>
    hide_input = false
    position = 0, -153
    halign = center
    valign = center
}

# ----------------------------------------------------------------------------
# Clock & Date Display
# ----------------------------------------------------------------------------

# Time (large display)
label {
    monitor =
    text = $TIME
    color = rgba(216, 222, 233, 0.70)
    font_size = 140
    font_family = SF Pro Display Bold
    position = 0, 260
    halign = center
    valign = center
}

# Date (day and month)
label {
    monitor =
    text = cmd[update:1000] echo -e "$(date +"%A, %d %B")"
    color = rgba(216, 222, 233, 0.70)
    font_size = 30
    font_family = SF Pro Display Bold
    position = 0, 150
    halign = center
    valign = center
}

# Lock Icon
label {
    monitor =
    text = <span> </span>
    color = rgba(216, 222, 233, 0.70)
    font_size = 24
    font_family = SF Pro Display Bold
    position = 2, -110
    halign = center
    valign = top
}

# ----------------------------------------------------------------------------
# User Profile
# ----------------------------------------------------------------------------

# Profile photo
image {
    monitor =
    path = $HOME/Pictures/user.jpg
    border_color = rgba(216, 222, 233, 0.70)
    border_size = 3
    size = 160
    rounding = -1        # -1 = circle
    rotate = 0
    reload_time = -1
    reload_cmd = 
    position = 0, 15
    halign = center
    valign = center
}

# Username greeting
label {
    monitor =
    text = Hi, $USER
    color = rgba(216, 222, 233, 0.70)
    font_size = 20
    font_family = SF Pro Display Bold Italic
    position = 0, -100
    halign = center
    valign = center
}


# ============================================================================
# Music Player Widget
# ============================================================================

# ----------------------------------------------------------------------------
# Album Art
# ----------------------------------------------------------------------------
image {
    monitor =
    path = $HOME/.config/hypr/Scripts/music.webp
    size = 150
    rounding = 5
    border_size = 3
    border_color = rgba(216, 222, 233, 0.70)
    rotate = 0
    reload_time = 2
    reload_cmd = ~/.config/hypr/Scripts/hyprlock-music.sh --art
    position = 1100, 60
    halign = left
    valign = bottom
    zindex = 1
}

# ----------------------------------------------------------------------------
# Player Background Box
# ----------------------------------------------------------------------------
shape {
    monitor =
    color = rgba(100, 114, 125, 0.4)
    size = 800, 200
    rounding = 10
    position = 0, 40
    halign = center
    valign = bottom
    zindex = 0
}

# ----------------------------------------------------------------------------
# Track Information
# ----------------------------------------------------------------------------

# Song title
label {
    monitor =
    text = cmd[update:1000] echo "$(~/.config/hypr/Scripts/hyprlock-music.sh --title)"
    color = rgba(216, 222, 233, 0.70)
    font_size = 20
    font_family = SF Pro Display Heavy
    position = 55, 138
    halign = center
    valign = bottom
    zindex = 1
}

# Player source (e.g., Spotify, Firefox)
label {
    monitor =
    text = cmd[update:1000] echo "$(~/.config/hypr/Scripts/hyprlock-music.sh --player)"
    color = rgba(216, 222, 233, 0.70)
    font_size = 13
    font_family = SF Pro Display Bold
    position = 205, 45
    halign = center
    valign = bottom
    zindex = 1
}

# Artist name
label {
    monitor =
    text = cmd[update:1000] echo "󰠃  $(~/.config/hypr/Scripts/hyprlock-music.sh --artist)"
    color = rgba(216, 222, 233, 0.70)
    font_size = 15
    font_family = SF Pro Display Semibold
    position = 55, 118
    halign = center
    valign = bottom
    zindex = 1
}

# ----------------------------------------------------------------------------
# Playback Controls
# ----------------------------------------------------------------------------

# Previous track button
label {
    monitor =
    text = 󰒮
    color = rgba(216, 222, 233, 0.70)
    font_size = 25
    onclick = playerctl previous
    position = -5, 55
    halign = center
    valign = bottom
}

# Play/Pause button
label {
    monitor =
    text = cmd[update:1000] ~/.config/hypr/Scripts/hyprlock-music.sh --status
    color = rgba(216, 222, 233, 0.70)
    font_size = 25
    onclick = playerctl play-pause
    position = 55, 55
    halign = center
    valign = bottom
}

# Next track button
label {
    monitor =
    text = 󰒭
    color = rgba(216, 222, 233, 0.70)
    font_size = 25
    onclick = playerctl next
    position = 110, 55
    halign = center
    valign = bottom
}

# ----------------------------------------------------------------------------
# Progress Display
# ----------------------------------------------------------------------------

# Current position timestamp
label {
    monitor = 
    text = cmd[update:1000] echo "$(~/.config/hypr/Scripts/hyprlock-music.sh --position)"
    color = rgba(216, 222, 233, 0.70)
    font_size = 10
    font_family = SF Pro Display Medium
    position = -100, 95
    halign = center
    valign = bottom
}

# Total length timestamp
label {
    monitor = 
    text = cmd[update:1000] echo "$(~/.config/hypr/Scripts/hyprlock-music.sh --length)"
    color = rgba(216, 222, 233, 0.70)
    font_size = 10
    font_family = SF Pro Display Medium
    position = 210, 95
    halign = center
    valign = bottom
}

# Progress bar (with Pango markup for colored segments)
label {
    monitor = 
    text = cmd[update:1000] ~/.config/hypr/Scripts/hyprlock-music.sh --progress-bar
    color = rgba(216, 222, 233, 0.70)
    font_size = 12
    font_family = SF Pro Display Medium
    position = 55, 95
    halign = center
    valign = bottom
}

