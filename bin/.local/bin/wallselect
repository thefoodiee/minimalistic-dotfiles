#!/usr/bin/env bash
#export LANG=en_IN.UTF-8
#export LC_ALL=en_IN.UTF-8
WALLDIR="$HOME/Pictures/wallpapers"

# Build rofi input with just filenames
choice=$(for img in "$WALLDIR"/*.{jpg,jpeg,png}; do
    [ -e "$img" ] || continue
    basename "$img"
done | rofi -dmenu -i -p "Select wallpaper")

[ -z "$choice" ] && exit

# Build full path again
select_wall="$WALLDIR/$choice"

# Call your custom script
/home/urmum/.local/bin/chwall "$select_wall"

